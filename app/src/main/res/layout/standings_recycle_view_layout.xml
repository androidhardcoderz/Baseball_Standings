<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/teamsLinearLayout"
    android:padding="8dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="#B6FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/leagueNameTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/divisionNameTextView" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/TEAMNAME"
            android:id="@+id/textView3"
            android:layout_weight="2.5"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black"
            android:typeface="serif" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/WINSLOSSES"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black"
            android:typeface="serif" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/WINNINGPCT"
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black"
            android:typeface="serif" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/GAMES_BACK"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black"
            android:typeface="serif" />
    </TableRow>

</LinearLayout>